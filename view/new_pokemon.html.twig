{% extends ('base.html.twig') %}

{% block content %}

    <div class="container">
        <div class="container">
            <div class="jumbotron">
                <h2 class="text-center">Crer votre Pokemon</h2>
                <p class="text-center">SVP, choisisez un nom et le type de votre pokemon et cliquer sur  "envoyer"</p>
                <form method="POST">
                    <div class="form-group">
                        <label for="name">Nom</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Entrer le nom de votre pokemon">
                    </div>
                    <select name="pokemonType" class="form-control">
                        <option value="0">Feu</option>
                        <option value="1">Eau</option>
                        <option value="2">Plante</option>
                    </select>
                    <button type="submit" class="btn btn-default">Envoyer</button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
