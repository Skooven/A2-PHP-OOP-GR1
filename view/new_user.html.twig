{% extends ('base.html.twig') %}

{% block content %}

    <div class="container">
        <div class="jumbotron">
            <h2 class="text-center">Crer votre compte</h2>
            <p class="text-center">SVP, choisiser un pseudo et un mot de passe et cliquer sur  "Envoyer"</p>
            <form method="POST">
                <div class="form-group">
                    <label for="username">Pseudo</label>
                    <input type="text" class="form-control" name="username" id="username" placeholder="Entrer un pseudo">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Mot de passe">
                </div>
                <button type="submit" class="btn btn-default">Envoyer</button>
            </form>
        </div>
    </div>

{% endblock %}

